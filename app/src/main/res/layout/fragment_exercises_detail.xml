<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/background_light_gray"
        tools:context=".MainActivity$PlaceholderFragment">

        <TextView
            android:id="@+id/txt_video_placeholder"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center"
            android:textColor="@color/background_white"
            android:background="@color/text_color_dark_grey"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/card_video_info"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_video_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_dark_grey"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:text="Title" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/background_list_item_gray" />


                <TextView
                    android:id="@+id/txt_video_description"
                    android:layout_marginTop="45dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="17sp"
                    android:text="Description" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_exercise_info"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_exercise_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text_color_dark_grey"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:text="Workout Information" />


                <TextView
                    android:id="@+id/txt_exercise_category"
                    android:layout_marginTop="37dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="15sp"
                    android:text="Description" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="60dp"
                    android:background="@color/background_list_item_gray" />


                <TextView
                    android:layout_marginTop="75dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:text="Level:" />


                <TextView
                    android:id="@+id/txt_workout_level"
                    android:layout_marginTop="75dp"
                    android:layout_marginStart="70dp"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="110dp"
                    android:background="@color/background_list_item_gray" />

                <TextView
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:text="Duration:" />

                <TextView
                    android:id="@+id/txt_workout_duration"
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="85dp"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="17sp" />


                <TextView
                    android:layout_marginTop="170dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:text="Calories:" />

                <TextView
                    android:id="@+id/txt_workout_calories"
                    android:layout_marginTop="170dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="85dp"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="17sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="156dp"
                    android:background="@color/background_list_item_gray" />


            </android.support.v7.widget.CardView>


        </LinearLayout>


    </LinearLayout>
</ScrollView>