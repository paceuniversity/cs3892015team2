<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context="pace.cs389.team2.quickfitness.ActivityAddWorkout$PlaceholderFragment">

    <TextView
        android:text="Create Workout"
        android:textSize="23sp"
        android:fontFamily="sans-serif-condensed"
        android:background="@color/material_blue_grey"
        android:layout_width="match_parent"
        android:textColor="@color/background_white"
        android:gravity="bottom"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:layout_height="60dp" />

    <EditText
        android:id="@+id/edt_set_workout_name"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:hint="Name"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/edt_set_workout_time"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:hint="Set Time"
        android:onClick="promptSetTimeDialog"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
