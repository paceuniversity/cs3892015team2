<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view1"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="2dp">


    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/card_top_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@color/material_blue_700"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_exercise_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:textColor="@color/background_white"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/card_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_exercise_picture"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:contentDescription="@string/cards_list_img_content_description"
                android:src="@drawable/treadmill" />


        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>