<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_light_gray"
    android:orientation="vertical"
    tools:context=".MainActivity$PlaceholderFragment">

    <FrameLayout
        android:id="@+id/frame_exercise_video"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#000">

        <VideoView
            android:id="@+id/video_placeholder"
            android:layout_width="match_parent"
            android:layout_height="210dp" />

        <ImageButton
            android:id="@+id/btn_video_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="@string/txt_video_play_button"
            android:src="@mipmap/ic_play_arrow_white_48dp" />

    </FrameLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_video_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:id="@+id/txt_video_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/text_color_dark_grey"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/img_gym_equipment_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:contentDescription="@string/txt_gym_equipment_info"
                        android:onClick="showGymEquipmentInfo"
                        android:src="@mipmap/ic_help_grey600_24dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/background_list_item_gray" />


                <TextView
                    android:id="@+id/txt_video_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="17sp" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_exercise_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="2dp">

                <TextView
                    android:id="@+id/txt_exercise_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/exercise_details"
                    android:textColor="@color/text_color_dark_grey"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/txt_exercise_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="37dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="15sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="60dp"
                    android:background="@color/background_list_item_gray" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="75dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/exercise_details_level"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="17sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_workout_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="75dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="110dp"
                    android:background="@color/background_list_item_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="120dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/exercise_details_duration"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_workout_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="120dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="17sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="170dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/exercise_details_calories"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_workout_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="170dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text_color_lighter_grey"
                    android:textSize="17sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="156dp"
                    android:background="@color/background_list_item_gray" />


            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
