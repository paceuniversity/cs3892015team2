<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_light_gray"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/txt_video_placeholder"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:textColor="@color/background_white"
        android:background="@color/text_color_dark_grey"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="VIDEO" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_video_info"
            android:layout_margin="5dp"
            app:cardCornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_dark_grey"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:text="Title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="35dp"
                android:background="@color/background_list_item_gray" />


            <TextView
                android:id="@+id/txt_video_description"
                android:layout_marginTop="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_lighter_grey"
                android:textSize="17sp"
                android:text="Description" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_exercise_info"
            android:layout_margin="5dp"
            app:cardCornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_exercise_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_dark_grey"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:text="Workout Information" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="60dp"
                android:background="@color/background_list_item_gray" />


            <TextView
                android:id="@+id/txt_workout_sets"
                android:layout_marginTop="75dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_lighter_grey"
                android:textSize="17sp"
                android:text="Sets" />

            <TextView
                android:id="@+id/txt_workout_x_separator"
                android:layout_marginTop="75dp"
                android:layout_marginStart="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_lighter_grey"
                android:textSize="17sp"
                android:text="x" />


            <TextView
                android:id="@+id/txt_workout_reps"
                android:layout_marginTop="75dp"
                android:layout_marginStart="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_lighter_grey"
                android:textSize="17sp"
                android:text="Reps" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="105dp"
                android:background="@color/background_list_item_gray" />


            <TextView
                android:id="@+id/txt_workout_calories"
                android:layout_marginTop="120dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_lighter_grey"
                android:textSize="17sp"
                android:text="Calories" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="150dp"
                android:background="@color/background_list_item_gray" />


        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>
